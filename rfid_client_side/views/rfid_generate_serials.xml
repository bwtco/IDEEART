<odoo>
    <data>
        <record id="view_generate_serials_form" model="ir.ui.view">
            <field name="name">view_generate_serials_form</field>
            <field name="model">rfid.ser.generate</field>
            <field name="arch" type="xml">
                <form string="Generate Serials For Product">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="sequence_no"/>
                            </group>
                            <group>
                                <field name="name"/>
                                <field name="default_code"/>
                                <field name="barcode"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                    <button name="generate_rfid_sequences" class="btn-primary" string="Generate Serials" type="object"/>
                    OR
                    <button  class="btn-primary" string="Cancel" special="cancel"/>
                </footer>
                </form>
            </field>
        </record>
        
        <record id="action_generate_serials_view" model="ir.actions.act_window">
            <field name="name">Generate RFID Serials</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rfid.ser.generate</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
              </p><p>
              </p>
            </field>
        </record>

        <menuitem id="menu_generate_rfid_serials_view" name="Generate RFID Serials" parent="stock.menu_stock_inventory_control" action="action_generate_serials_view" sequence="21"/>
        
        
    </data>
</odoo>