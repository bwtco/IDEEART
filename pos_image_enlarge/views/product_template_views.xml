<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product View -->
    
    <record id="product_template_only_form_view_custom_inherited" model="ir.ui.view">
        <field name="name">product.template.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="image_1920" position="replace">
                <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128','zoom':true}"/>
            </field>
        </field>
    </record>
</odoo>
