<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="product_form_hide_cost">
            <field name="name">product.template.cost</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='standard_price_uom']" position="attributes">
                    <attribute name="groups">hide_cost_price.view_cost_price</attribute>
                </xpath>
                <xpath expr="//label[@for='standard_price']" position="attributes">
                    <attribute name="groups">hide_cost_price.view_cost_price</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="product_tree_hide_cost">
            <field name="name">product.template.cost</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="groups">hide_cost_price.view_cost_price</attribute>
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="product_variant_tree_hide_cost">
            <field name="name">product.variant.cost</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="groups">hide_cost_price.view_cost_price</attribute>
                </xpath>
            </field>
        </record>

         <record id="view_stock_quant_tree_inheri" model="ir.ui.view">
            <field name="name">view.stock.quant.inherit.tree</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='value']" position="attributes">
                    <attribute name="groups">hide_cost_price.view_cost_price</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_stock_valuation_layer_tree" model="ir.ui.view">
            <field name="name">view.stock.valuation.layer.inherit.tree</field>
            <field name="model">stock.valuation.layer</field>
            <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='value']" position="attributes">
                    <attribute name="groups">hide_cost_price.view_cost_price</attribute>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="stock_valuation_layer_form" model="ir.ui.view">
            <field name="name">view.stock.valuation.layer.form</field>
            <field name="model">stock.valuation.layer</field>
            <field name="inherit_id" ref="stock_account.stock_valuation_layer_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[1]/group/field[@name='unit_cost']" position="attributes">
                    <attribute name="groups">hide_cost_price.view_cost_price</attribute>
                </xpath>
                <xpath expr="//page[1]/group/field[@name='value']" position="attributes">
                    <attribute name="groups">hide_cost_price.view_cost_price</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
